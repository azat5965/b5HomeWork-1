public static void main(String[]args) {
		String name="Becca";
		
		System.out.println(name.substring(0,1).toUpperCase()); 
		System.out.println(name.substring(1,2).toUpperCase());
		System.out.println(name.substring(2,3).toUpperCase());
		System.out.println(name.substring(3,4).toUpperCase());
		System.out.println(name.substring(4,5).toUpperCase());
	}

}

