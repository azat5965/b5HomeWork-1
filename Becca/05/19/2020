public static void main(String[]args) {
		
		Scanner input= new Scanner(System.in);
		System.out.println("How many percent you attending the school out of 100?");
		
	int atendencePercent= input.nextInt();
	
	System.out.println("Do you finish all your homework?Yes/No");
	String finishesHW=input.next();
	System.out.println("Have you reccaped Java class? Yes/No");
	String reccapesJava=input.next();
		 
		 boolean finishesHWResult=finishesHW.equalsIgnoreCase("Yes");
		 boolean reccapesJavaResult=reccapesJava.equalsIgnoreCase("Yes");
		 boolean result=finishesHWResult && reccapesJavaResult;
		 boolean resultAtendence=atendencePercent >= 80;

         boolean finalResult = result && resultAtendence;
 
	System.out.println("Active student: "+ finalResult);
	
	
	}

}
